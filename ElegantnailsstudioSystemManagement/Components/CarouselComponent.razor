@* Components/CarouselComponent.razor *@
<div class="shared-carousel">
    <div id="carouselMain" class="carousel slide carousel-fade" data-bs-ride="carousel">

      
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#carouselMain" data-bs-slide-to="3"></button>
        </div>

        <!-- Imágenes -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="carousel-image" style="background-image: url('/static/carrusel1.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Transforma tu Estilo</h2>
                    <p>La perfección en cada detalle</p>
                </div>
            </div>

            <div class="carousel-item">
                <div class="carousel-image" style="background-image: url('/static/carrusel2.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Calidad Premium</h2>
                    <p>Productos de primera calidad</p>
                </div>
            </div>

            <div class="carousel-item">
                <div class="carousel-image" style="background-image: url('/static/carrusel3.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Diseños Exclusivos</h2>
                    <p>Tendencias únicas para ti</p>
                </div>
            </div>

            <div class="carousel-item">
                <div class="carousel-image" style="background-image: url('/static/carrusel4.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Reserva Fácil</h2>
                    <p>Agenda tu cita en línea</p>
                </div>
            </div>
        </div>

        <!-- Flechas -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselMain" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselMain" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>






