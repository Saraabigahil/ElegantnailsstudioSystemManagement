@page "/citas"
@attribute [Authorize]
@using Microsoft.AspNetCore.WebUtilities
@inject ICitaService CitaService
@inject IServicioService ServicioService
@inject IUsuarioService UsuarioService
@inject AuthStateService AuthService
@inject NavigationManager Navigation

<PageTitle>Citas - Elegant Nails</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@(AuthService.IsAdmin ? "Gestión de Citas (Admin)" : "Mis Citas")</h1>

        <button class="btn btn-primary" @onclick="AbrirModalNuevaCita">
            <i class="bi bi-plus-lg"></i> Nueva Cita
        </button>
    </div>

    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @mensajeError
            <button type="button" class="btn-close" @onclick="() => mensajeError = null"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @mensajeExito
            <button type="button" class="btn-close" @onclick="() => mensajeExito = null"></button>
        </div>
    }

    @if (citas == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (!citas.Any())
    {
        <div class="alert alert-info shadow-sm">
            <i class="bi bi-info-circle me-2"></i> No hay citas registradas.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover shadow-sm align-middle bg-white rounded">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Turno</th>
                        @if (AuthService.IsAdmin)
                        {
                            <th>Cliente</th>
                        }
                        <th>Servicio</th>
                        <th>Precio</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cita in citas)
                    {
                        var servicio = servicios.FirstOrDefault(s => s.Id == cita.ServicioId);
                        <tr>
                            <td>@cita.FechaCita.ToShortDateString()</td>
                            <td><span class="badge bg-light text-dark border">@cita.Turno</span></td>
                            @if (AuthService.IsAdmin)
                            {
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold">Cliente ID: @cita.ClienteId</span>
                                        <small class="text-muted">Ver detalles en sistema</small>
                                    </div>
                                </td>
                            }
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (servicio != null && !string.IsNullOrEmpty(servicio.ImagenUrl))
                                    {
                                        <img src="@servicio.ImagenUrl" alt="svc" class="rounded-circle me-2" style="width:30px;height:30px;object-fit:cover;">
                                    }
                                    @(servicio?.Nombre ?? "Servicio no encontrado")
                                </div>
                            </td>
                            <td>@servicio?.Precio.ToString("C")</td>
                            <td>
                                @switch (cita.Estado.ToLower())
                                {
                                    case "pendiente":
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                        break;
                                    case "completada":
                                        <span class="badge bg-success">Completada</span>
                                        break;
                                    case "cancelada":
                                        <span class="badge bg-danger">Cancelada</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@cita.Estado</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (cita.Estado == "pendiente")
                                {
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => CancelarCita(cita.Id)" title="Cancelar Cita">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                    @if (AuthService.IsAdmin)
                                    {
                                        <button class="btn btn-sm btn-outline-success ms-1" @onclick="() => CompletarCita(cita.Id)" title="Marcar Completada">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (mostrarModal)
    {
        <div class="modal d-block" style="background: rgba(0,0,0,0.5)" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                    </div>
                    <div class="modal-body">
                        <EditForm Model="nuevaCita" OnValidSubmit="GuardarCita">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label fw-bold">Servicio</label>
                                <InputSelect @bind-Value="nuevaCita.ServicioId" class="form-select" disabled="@servicioPreseleccionado">
                                    <option value="0">-- Seleccione un servicio --</option>
                                    @foreach (var s in servicios)
                                    {
                                        <option value="@s.Id">@s.Nombre - @s.Precio.ToString("C")</option>
                                    }
                                </InputSelect>
                            </div>

                            @if (nuevaCita.ServicioId > 0)
                            {
                                var serv = servicios.FirstOrDefault(s => s.Id == nuevaCita.ServicioId);
                                if (serv != null)
                                {
                                    <div class="card bg-light mb-3 border-0">
                                        <div class="card-body p-2 d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(serv.ImagenUrl))
                                            {
                                                <img src="@serv.ImagenUrl" class="rounded me-3" style="width:60px;height:60px;object-fit:cover;">
                                            }
                                            <div>
                                                <h6 class="mb-0">@serv.Nombre</h6>
                                                <small class="text-muted">Duración: @serv.DuracionMinutos mins</small>
                                                <div class="fw-bold text-primary">@serv.Precio.ToString("C")</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Fecha</label>
                                    <InputDate @bind-Value="nuevaCita.FechaCita" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Turno</label>
                                    <InputSelect @bind-Value="nuevaCita.Turno" class="form-select">
                                        <option value="mañana">Mañana (8am - 12pm)</option>
                                        <option value="tarde">Tarde (1pm - 5pm)</option>
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Confirmar Reserva
                                </button>
                                <button type="button" class="btn btn-light" @onclick="CerrarModal">Cancelar</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Cita> citas = new();
    private List<Servicio> servicios = new();
    private Cita nuevaCita = new();
    private bool mostrarModal = false;
    private bool servicioPreseleccionado = false;
    private string? mensajeError;
    private string? mensajeExito;

    protected override async Task OnInitializedAsync()
    {
        // 1. Cargar servicios
        servicios = await ServicioService.GetServiciosActivosAsync();

        // 2. Cargar Citas según Rol
        await CargarCitas();

        // 3. Verificar si venimos de la página de servicios con un ID
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("servicioId", out var sIdVal))
        {
            if (int.TryParse(sIdVal, out int sId))
            {
                AbrirModalNuevaCita(sId);
            }
        }
    }

    private async Task CargarCitas()
    {
        if (AuthService.IsAdmin)
        {
            citas = await CitaService.GetCitasAsync();
        }
        else
        {
            // Si es cliente, solo sus citas
            var userId = AuthService.CurrentUser?.Id ?? 0;
            citas = await CitaService.GetCitasByClienteAsync(userId);
        }
    }

    private void AbrirModalNuevaCita()
    {
        AbrirModalNuevaCita(0);
    }

    private void AbrirModalNuevaCita(int servicioId)
    {
        nuevaCita = new Cita
            {
                FechaCita = DateTime.Today.AddDays(1), // Sugerir mañana por defecto
                Turno = "mañana",
                Estado = "pendiente",
                ClienteId = AuthService.CurrentUser?.Id ?? 0,
                ServicioId = servicioId
            };

        servicioPreseleccionado = servicioId > 0;
        mensajeError = null;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        // Limpiar la URL para que si refresca no vuelva a abrir el modal
        Navigation.NavigateTo("/citas");
    }

    private async Task GuardarCita()
    {
        if (nuevaCita.ServicioId == 0)
        {
            mensajeError = "Por favor seleccione un servicio.";
            return;
        }

        var exito = await CitaService.CreateCitaAsync(nuevaCita);

        if (exito)
        {
            mensajeExito = "¡Cita agendada con éxito!";
            await CargarCitas();
            CerrarModal();
        }
        else
        {
            mensajeError = "No hay cupo disponible para esa fecha y turno. Por favor intente otro.";
        }
    }

    private async Task CancelarCita(int id)
    {
        if (await CitaService.CancelarCitaAsync(id))
        {
            mensajeExito = "La cita ha sido cancelada.";
            await CargarCitas();
        }
    }

    private async Task CompletarCita(int id)
    {
        if (await CitaService.CompletarCitaAsync(id))
        {
            mensajeExito = "Cita marcada como completada.";
            await CargarCitas();
        }
    }
}