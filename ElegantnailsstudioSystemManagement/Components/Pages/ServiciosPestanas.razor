@page "/pestanas"
@layout MainLayout
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Pestañas</PageTitle>

<header class="pestanas-header">
    <div class="container">
        <div class="pestanas-header-content">
            <h1 class="pestanas-title">
                <i class="bi bi-eye me-2"></i>Servicios de Pestañas
            </h1>
            <p class="pestanas-subtitle">Realza tu mirada con nuestras extensiones de pestañas</p>
        </div>
    </div>
</header>

<!-- CONTENIDO PRINCIPAL -->
<main class="pestanas-main">
    <div class="container">
        @if (serviciosPestanas.Count == 0)
        {
            <div class="alert alert-info">
                <h4><i class="bi bi-info-circle me-2"></i>No hay servicios disponibles</h4>
                <p>Próximamente agregaremos nuestros servicios de pestañas.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var servicio in serviciosPestanas)
                {
                    <div class="col-md-4">
                        <div class="card pestanas-card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-stars me-2"></i>@servicio.Nombre
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text servicio-descripcion">@servicio.Descripcion</p>

                                <div class="servicio-info">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="servicio-precio">
                                            <i class="bi bi-currency-dollar me-1"></i>@servicio.Precio.ToString("C")
                                        </span>
                                        <span class="servicio-duracion">
                                            <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                        </span>
                                    </div>
                                </div>

                                <div class="d-grid">
                                    <a href="/citas/agendar?servicioId=@servicio.Id" class="btn pestanas-btn-agendar">
                                        <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- SERVICIOS DESTACADOS -->
        <div class="row g-4 mt-5">
            <div class="col-md-4">
                <div class="card pestanas-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-stars me-2"></i>Pestañas individuales
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text servicio-descripcion">Extensiones de efecto natural para un look sofisticado.</p>
                        <div class="servicio-info">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="servicio-precio">
                                    <i class="bi bi-currency-dollar me-1"></i>$30.00
                                </span>
                                <span class="servicio-duracion">
                                    <i class="bi bi-clock me-1"></i>120 min
                                </span>
                            </div>
                        </div>
                        <div class="d-grid">
                            <a href="/citas/agendar?tipo=pestanas-individuales" class="btn pestanas-btn-agendar">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card pestanas-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-magic me-2"></i>Extensiones efecto rímel
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text servicio-descripcion">Efecto voluminoso como si usaras rímel.</p>
                        <div class="servicio-info">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="servicio-precio">
                                    <i class="bi bi-currency-dollar me-1"></i>$45.00
                                </span>
                                <span class="servicio-duracion">
                                    <i class="bi bi-clock me-1"></i>120 min
                                </span>
                            </div>
                        </div>
                        <div class="d-grid">
                            <a href="/citas/agendar?tipo=pestanas-rimel" class="btn pestanas-btn-agendar">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card pestanas-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-heart me-2"></i>Pestañas magnéticas
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text servicio-descripcion">Fácil aplicación y remoción, sin daño a tus pestañas naturales.</p>
                        <div class="servicio-info">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="servicio-precio">
                                    <i class="bi bi-currency-dollar me-1"></i>$35.00
                                </span>
                                <span class="servicio-duracion">
                                    <i class="bi bi-clock me-1"></i>90 min
                                </span>
                            </div>
                        </div>
                        <div class="d-grid">
                            <a href="/citas/agendar?tipo=pestanas-magneticas" class="btn pestanas-btn-agendar">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@code {
    private List<Servicio> serviciosPestanas = new();
    private Categoria? categoriaPestanas;

    protected override async Task OnInitializedAsync()
    {
        await CargarServiciosPestanas();
    }

    private async Task CargarServiciosPestanas()
    {
        try
        {
            // Busca categoría "Pestañas"
            categoriaPestanas = await CategoriaService.GetCategoriaByNombreAsync("Pestañas");

            if (categoriaPestanas != null)
            {
                serviciosPestanas = await ServicioService.GetServiciosByCategoriaAsync(categoriaPestanas.Id);
            }
            else
            {
                // Si no existe la categoría, mostrar todos los servicios
                var todosServicios = await ServicioService.GetServiciosActivosAsync();
                serviciosPestanas = todosServicios
                    .Where(s => s.Nombre.ToLower().Contains("pestaña") ||
                               s.Descripcion.ToLower().Contains("pestaña"))
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando servicios de pestañas: {ex.Message}");
        }
    }
}