@page "/pestanas"
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Pestañas</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Servicios de Pestañas</h1>

    @if (serviciosPestanas.Count == 0)
    {
        <div class="alert alert-info">
            <h4>No hay servicios de pestañas disponibles</h4>
            <p>Próximamente agregaremos nuestros servicios de pestañas.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var servicio in serviciosPestanas)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(servicio.ImagenUrl))
                            {
                                <img src="@servicio.ImagenUrl" alt="@servicio.Nombre"
                                     class="card-img-top mb-3" style="height: 200px; object-fit: cover;" />
                            }
                            <h5 class="card-title">@servicio.Nombre</h5>
                            <p class="card-text text-muted">@servicio.Descripcion</p>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h5 text-primary fw-bold">@servicio.Precio.ToString("C")</span>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                </span>
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-primary" @onclick="() => AgendarServicio(servicio.Id)">
                                    <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Información adicional -->
    <div class="mt-5 pt-4 border-top">
        <div class="row">
            <div class="col-md-6">
                <div class="card bg-light border-0">
                    <div class="card-body">
                        <h5><i class="bi bi-info-circle text-primary me-2"></i>Información Importante</h5>
                        <ul class="mt-3">
                            <li>Duración promedio de cada servicio: 2-3 horas</li>
                            <li>Materiales de primera calidad</li>
                            <li>Productos hipoalergénicos</li>
                            <li>Mantenimiento recomendado cada 3 semanas</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-light border-0">
                    <div class="card-body">
                        <h5><i class="bi bi-shield-check text-success me-2"></i>Nuestras Garantías</h5>
                        <ul class="mt-3">
                            <li>Duración garantizada de 4 semanas</li>
                            <li>Retoques gratuitos dentro de los primeros 7 días</li>
                            <li>Asesoría personalizada sobre cuidados</li>
                            <li>Productos orgánicos y no dañinos</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Servicio> serviciosPestanas = new();
    private Categoria? categoriaPestanas;

    protected override async Task OnInitializedAsync()
    {
        await CargarServiciosPestanas();
    }

    private async Task CargarServiciosPestanas()
    {
        try
        {
            // Buscar categoría "Pestañas"
            categoriaPestanas = await CategoriaService.GetCategoriaByNombreAsync("Pestañas");

            if (categoriaPestanas != null)
            {
                serviciosPestanas = await ServicioService.GetServiciosByCategoriaAsync(categoriaPestanas.Id);
            }
            else
            {
                // Si no existe la categoría, mostrar todos los servicios
                var todosServicios = await ServicioService.GetServiciosActivosAsync();
                serviciosPestanas = todosServicios
                    .Where(s => s.Nombre.ToLower().Contains("pestaña") ||
                               s.Descripcion.ToLower().Contains("pestaña"))
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando servicios de pestañas: {ex.Message}");
        }
    }

    private void AgendarServicio(int servicioId)
    {
        Navigation.NavigateTo($"/citas?servicioId={servicioId}");
    }
}







