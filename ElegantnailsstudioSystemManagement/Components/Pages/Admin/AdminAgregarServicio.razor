@page "/admin/servicios/agregar"
@layout AdminLayout
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Agregar Servicio</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Agregar Servicio</h5>
                        <a href="/admin/servicios" class="btn btn-sm btn-light">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <EditForm Model="nuevoServicio" OnValidSubmit="GuardarServicio" FormName="serviciosForm">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre</label>
                                <InputText @bind-Value="nuevoServicio.Nombre" class="form-control"
                                           placeholder="Nombre del servicio" />
                                <ValidationMessage For="@(() => nuevoServicio.Nombre)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Categoría</label>
                                <select @bind="nuevoServicio.CategoriaId" class="form-select">
                                    <option value="0">Seleccionar categoría</option>
                                    @foreach (var cat in categorias)
                                    {
                                        <option value="@cat.Id">@cat.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Descripción</label>
                            <InputTextArea @bind-Value="nuevoServicio.Descripcion" class="form-control"
                                           rows="3" placeholder="Descripción del servicio" />
                            <ValidationMessage For="@(() => nuevoServicio.Descripcion)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Precio ($)</label>
                                <InputNumber @bind-Value="nuevoServicio.Precio" class="form-control" />
                                <ValidationMessage For="@(() => nuevoServicio.Precio)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Duración (minutos)</label>
                                <InputNumber @bind-Value="nuevoServicio.DuracionMinutos" class="form-control" />
                                <ValidationMessage For="@(() => nuevoServicio.DuracionMinutos)" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Agregar Foto</label>
                            <div class="input-group">
                                <InputText @bind-Value="nuevoServicio.ImagenUrl" class="form-control"
                                           placeholder="URL de la imagen" />
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-upload"></i>
                                </button>
                            </div>
                            <div class="form-text">
                                Ingresa la URL de la imagen o sube un archivo
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save me-2"></i>Guardar
                            </button>
                            <a href="/admin/servicios" class="btn btn-outline-secondary">
                                Cancelar
                            </a>

                            <div class="mt-3">
                                <a href="/admin/servicios" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Atrás
                                </a>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Servicio nuevoServicio = new();
    private List<Categoria> categorias = new();
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarCategorias();
    }

    private async Task CargarCategorias()
    {
        categorias = await CategoriaService.GetCategoriasAsync();
    }

    private async Task GuardarServicio()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(nuevoServicio.Nombre))
            {
                mensajeError = "El nombre del servicio es requerido";
                return;
            }

            if (nuevoServicio.CategoriaId == 0)
            {
                mensajeError = "Debes seleccionar una categoría";
                return;
            }

            var exito = await ServicioService.CrearServicio(nuevoServicio);

            if (exito)
            {
                Navigation.NavigateTo("/admin/servicios");
            }
            else
            {
                mensajeError = "Error al guardar el servicio";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al guardar: {ex.Message}";
        }
    }
}






