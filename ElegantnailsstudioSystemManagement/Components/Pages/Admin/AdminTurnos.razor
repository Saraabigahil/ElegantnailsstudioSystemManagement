@page "/admin/turnos"
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject ICupoService CupoService
@inject NavigationManager Navigation

<PageTitle>Habilitar Turnos</PageTitle>

<div class="admin-turnos-habilitar-container">
    <div class="turnos-main-header">
        <i class="bi bi-calendar-plus-fill header-icon"></i>
        <h1>Habilitar Turnos</h1>
    </div>

    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="mensaje-container">
            <div class="mensaje-error">
                <i class="bi bi-exclamation-circle"></i>
                <span>@mensajeError</span>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="mensaje-container">
            <div class="mensaje-exito">
                <i class="bi bi-check-circle"></i>
                <span>@mensajeExito</span>
            </div>
        </div>
    }

    <div class="turnos-dashboard">
        <div class="habilitar-turno-section">
            <h2><i class="bi bi-plus-circle"></i> Habilitar Turno</h2>

            <div class="turno-form-group">
                <label class="turno-form-label">
                    <i class="bi bi-calendar"></i> Fecha
                </label>
                <input type="date"
                       value="@fechaString"
                       @onchange="OnFechaChange"
                       class="turno-form-control"
                       min="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>

            <div class="turno-form-group">
                <label class="turno-form-label">
                    <i class="bi bi-clock"></i> Turno
                </label>
                <select @onchange="OnTurnoChange" class="turno-form-control">
                    <option value="mañana" selected="@(turnoSeleccionado == "mañana")">
                        Mañana (8:00 AM - 12:00 PM)
                    </option>
                    <option value="tarde" selected="@(turnoSeleccionado == "tarde")">
                        Tarde (1:00 PM - 5:00 PM)
                    </option>
                </select>
            </div>

            <div class="turno-form-group">
                <label class="turno-form-label">
                    <i class="bi bi-people"></i> Cupos disponibles
                </label>
                <input type="number"
                       value="@cuposMaximos"
                       @onchange="OnCuposChange"
                       class="turno-form-control"
                       min="1"
                       max="20" />
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle"></i> Número de citas permitidas en este turno
                </small>
            </div>

            <button class="btn-habilitar-turno" @onclick="HabilitarTurno">
                <i class="bi bi-check-circle"></i>
                <span>Habilitar Turno</span>
            </button>
        </div>

        <div class="turnos-habilitados-section">
            <h2><i class="bi bi-calendar-check"></i> Turnos Habilitados</h2>
            <h3>Próximos 7 días</h3>

            @if (cuposHabilitados.Count == 0)
            {
                <div class="turnos-vacio">
                    <i class="bi bi-calendar-x"></i>
                    <h4>No hay turnos habilitados</h4>
                    <p>Comienza habilitando tu primer turno</p>
                </div>
            }
            else
            {
                <ul class="lista-turnos-habilitados">
                    @foreach (var cupo in cuposHabilitados)
                    {
                        <li class="turno-habilitado-item">
                            <div class="turno-info">
                                <div class="turno-fecha">
                                    <i class="bi bi-calendar3 me-2"></i>
                                    @cupo.Fecha.ToString("dd/MM/yyyy")
                                </div>
                                <span class="turno-horario">
                                    @(cupo.Turno == "mañana" ? "🌅 Mañana" : "☀️ Tarde")
                                </span>
                            </div>

                            <div class="turno-detalles">
                                <div class="turno-cupos">
                                    <i class="bi bi-person-check"></i>
                                    <span>Cupos: @cupo.CupoReservado/@cupo.CupoMaximo</span>
                                </div>
                               
                            </div>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="/admin" class="btn-atras-turnos">
            <i class="bi bi-arrow-left"></i>
            <span>Volver al Panel</span>
        </a>
    </div>
</div>

@code {
    private string fechaString = "";
    private string turnoSeleccionado = "mañana";
    private int cuposMaximos = 5;
    private List<Cupo> cuposHabilitados = new();
    private string mensajeError = "";
    private string mensajeExito = "";

    protected override async Task OnInitializedAsync()
    {
        fechaString = DateTime.Today.ToString("yyyy-MM-dd");
        await CargarTurnosHabilitados();
    }

    private async Task CargarTurnosHabilitados()
    {
        cuposHabilitados = await CupoService.GetCuposHabilitadosAsync(
            DateTime.Today,
            DateTime.Today.AddDays(7)
        );
    }

    private void OnFechaChange(ChangeEventArgs e)
    {
        fechaString = e.Value?.ToString() ?? DateTime.Today.ToString("yyyy-MM-dd");
    }

    private void OnTurnoChange(ChangeEventArgs e)
    {
        turnoSeleccionado = e.Value?.ToString() ?? "mañana";
    }

    private void OnCuposChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int cupos))
        {
            cuposMaximos = Math.Clamp(cupos, 1, 20);
        }
    }

    private async Task HabilitarTurno()
    {
        try
        {
            if (!DateTime.TryParse(fechaString, out DateTime fecha))
            {
                fecha = DateTime.Today;
            }

            var exito = await CupoService.HabilitarTurnoAsync(
                fecha,
                turnoSeleccionado,
                cuposMaximos
            );

            if (exito)
            {
                mensajeExito = $"✅ Turno habilitado: {fecha:dd/MM/yyyy} - {turnoSeleccionado}";
                mensajeError = "";
                await CargarTurnosHabilitados();

                await Task.Delay(3000);
                mensajeExito = "";
            }
            else
            {
                mensajeError = "⚠️ Error al habilitar el turno. Ya existe un turno para esa fecha y horario.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"❌ Error: {ex.Message}";
        }
    }
}