@page "/admin"
@using Microsoft.AspNetCore.Authorization
@using ElegantnailsstudioSystemManagement.Services
@using ElegantnailsstudioSystemManagement.Models
@using Microsoft.AspNetCore.Components.Forms
@using ElegantnailsstudioSystemManagement.Components
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject ILogoService LogoService

<PageTitle>Elegant Nails - Panel de Administración</PageTitle>

<link rel="stylesheet" href="css/admin-panel.css">

<header class="navbar-negro-admin">
    <div class="fila-superior-admin">
        <div class="logo-izquierda-admin">
            @if (!string.IsNullOrEmpty(logoPath))
            {
                <img src="@logoPath" alt="Elegant Nails Logo" class="dashboard-logo" />
            }
            else
            {
                <h1>Elegant Nails Admin</h1>
                <p class="slogan-admin">A TU ESTILO en cada detalle</p>
            }
        </div>

        <div class="botones-derecha-admin">
            <a href="#" @onclick="Logout" class="btn-cerrar-sesion">
                <i class="bi bi-box-arrow-right"></i> Cerrar sesión
            </a>
        </div>
    </div>

    <nav class="fila-inferior-admin">
        <div class="container">
            <ul class="menu-lista-admin">
                <li><a href="/admin" class="activo"><i class="bi bi-house"></i> Inicio</a></li>
                <li><a href="/admin/citas"><i class="bi bi-calendar-check"></i> Citas</a></li>
                <li><a href="/admin/categorias"><i class="bi bi-tags"></i> Categorías</a></li>
                <li><a href="/admin/servicios"><i class="bi bi-scissors"></i> Servicios</a></li>
                <li><a href="/admin/turnos"><i class="bi bi-clock"></i> Cupos</a></li>
                <li><a href="/admin/logo"><i class="bi bi-palette"></i> Logo</a></li>
            </ul>
        </div>
    </nav>
</header>

<div class="container-fluid mt-4 admin-page">
    <CarouselComponent />

    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle me-2"></i> @mensajeExito
            <button type="button" class="btn-close" @onclick="() => mensajeExito = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @mensajeError
            <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button>
        </div>
    }

    <div class="card servicios-title-card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">
                        <i class="bi bi-scissors me-2"></i>Servicios Disponibles
                    </h5>
                    <p class="text-muted mb-0 mt-1">
                        @serviciosActivos servicios activos • @categoriasCount categorías
                    </p>
                </div>
                <a href="/admin/servicios" class="btn btn-gestionar-servicios">
                    <i class="bi bi-plus-circle me-1"></i>Gestionar Servicios
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @if (servicios.Any())
        {
            @foreach (var servicio in servicios)
            {
                var categoria = categorias.FirstOrDefault(c => c.Id == servicio.CategoriaId);
                <div class="col-md-4">
                    <div class="tarjeta-unificada">
                        <div class="contenedor-imagen-tarjeta">
                            @if (!string.IsNullOrEmpty(servicio.ImagenUrl))
                            {
                                <img src="@servicio.ImagenUrl" alt="@servicio.Nombre" />
                            }
                            else
                            {
                                <div class="placeholder-imagen-unificado">
                                    <i class="bi bi-scissors"></i>
                                    <p>@servicio.Nombre</p>
                                </div>
                            }
                        </div>

                        <div class="encabezado-tarjeta">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="titulo-tarjeta mb-0">
                                    <i class="bi bi-scissors me-2"></i>@servicio.Nombre
                                </h5>
                                @if (categoria != null)
                                {
                                    <span class="badge-categoria-admin">@categoria.Nombre</span>
                                }
                            </div>
                        </div>

                        <div class="cuerpo-tarjeta">
                            @if (!string.IsNullOrEmpty(servicio.Descripcion))
                            {
                                <p class="descripcion-tarjeta mb-4">@servicio.Descripcion</p>
                            }

                            <div class="info-servicio">
                                <div class="contenedor-precio-duracion">
                                    <div class="precio-tarjeta">
                                        <i class="bi bi-currency-dollar"></i>
                                        @servicio.Precio.ToString("0.00")
                                    </div>
                                    <div class="duracion-tarjeta">
                                        <i class="bi bi-clock"></i>
                                        @servicio.DuracionMinutos min
                                    </div>
                                </div>
                            </div>

                            <div class="botones-admin-horizontal">
                                <a href="/admin/servicios/modificar/@servicio.Id"
                                   class="btn btn-admin-editar">
                                    <i class="bi bi-pencil me-1"></i>Editar
                                </a>
                                <button class="btn btn-admin-eliminar"
                                        @onclick="() => MostrarConfirmacionEliminar(servicio)">
                                    <i class="bi bi-trash me-1"></i>Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>

<!-- Modal de confirmación para eliminar servicio -->
@if (showConfirmacionEliminar && servicioAEliminar != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Eliminar Servicio
                    </h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminacion"></button>
                </div>

                <div class="modal-body text-center py-4">
                    <div class="mb-3">
                        <i class="bi bi-trash-fill text-danger" style="font-size: 3rem;"></i>
                    </div>

                    <h4 class="mb-3">¿Estás seguro de eliminar este servicio?</h4>

                    <div class="alert alert-light border">
                        <h5 class="mb-0">"@servicioAEliminar.Nombre"</h5>
                    </div>

                    <div class="mt-3 text-start">
                        <p><strong>Descripción:</strong> @servicioAEliminar.Descripcion</p>
                        <p><strong>Precio:</strong> @servicioAEliminar.Precio.ToString("C")</p>
                        <p><strong>Duración:</strong> @servicioAEliminar.DuracionMinutos minutos</p>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Este servicio desaparecerá permanentemente.</strong>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelarEliminacion">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminacion">
                        <i class="bi bi-trash me-1"></i> Eliminar Servicio
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Servicio> servicios = new();
    private List<Categoria> categorias = new();
    private int serviciosActivos = 0;
    private int categoriasCount = 0;
    private int totalServicios = 0;
    private string logoPath = string.Empty;

    private bool showConfirmacionEliminar = false;
    private Servicio servicioAEliminar = null;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("\n=== 🚀 ADMIN.RAZOR INICIALIZADO ===");
        Console.WriteLine($"🔍 AuthService.IsLoggedIn: {AuthService.IsLoggedIn}");
        Console.WriteLine($"🔍 AuthService.IsAdmin: {AuthService.IsAdmin}");
        Console.WriteLine($"🔍 AuthService.CurrentUser: {AuthService.CurrentUser?.Email}");

        // Carga logo
        logoPath = LogoService.ObtenerLogoActual();

        await CargarDatos();
        await base.OnInitializedAsync();
    }

    private async Task CargarDatos()
    {
        try
        {
            // Carga servicios
            servicios = await ServicioService.GetServiciosActivosAsync();
            serviciosActivos = servicios.Count;
            totalServicios = servicios.Count;

            // Carga categorías
            categorias = await CategoriaService.GetCategoriasAsync();
            categoriasCount = categorias.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando datos: {ex.Message}");
        }
    }

    private bool IsActivePage(string pagePath)
    {
        var currentPath = Navigation.Uri.Replace(Navigation.BaseUri, "");
        return currentPath.Equals(pagePath.TrimStart('/'), StringComparison.OrdinalIgnoreCase);
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }

    private void MostrarConfirmacionEliminar(Servicio servicio)
    {
        servicioAEliminar = servicio;
        showConfirmacionEliminar = true;
        StateHasChanged();
    }

    private void CancelarEliminacion()
    {
        servicioAEliminar = null;
        showConfirmacionEliminar = false;
        StateHasChanged();
    }

    private async Task ConfirmarEliminacion()
    {
        if (servicioAEliminar == null)
        {
            Console.WriteLine("❌ [ADMIN] servicioAEliminar es NULL");
            return;
        }

        Console.WriteLine($"🔍 [ADMIN] Confirmando eliminación de servicio ID: {servicioAEliminar.Id}");
        Console.WriteLine($"🔍 [ADMIN] Nombre del servicio: {servicioAEliminar.Nombre}");

        try
        {
            bool eliminado = await ServicioService.EliminarServicioAsync(servicioAEliminar.Id);

            Console.WriteLine($"📊 [ADMIN] Resultado de eliminación: {eliminado}");

            if (eliminado)
            {
                Console.WriteLine($"✅ [ADMIN] Servicio eliminado exitosamente");
                mensajeExito = $"Servicio '{servicioAEliminar.Nombre}' eliminado correctamente";
                mensajeError = string.Empty;

                // Cerrar modal
                servicioAEliminar = null;
                showConfirmacionEliminar = false;

                await CargarDatos();

                await Task.Delay(3000);
                mensajeExito = string.Empty;
            }
            else
            {
                Console.WriteLine($"❌ [ADMIN] No se pudo eliminar el servicio");
                mensajeError = "No se pudo eliminar el servicio. Verifica que no tenga citas asociadas.";
                mensajeExito = string.Empty;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"💥 [ADMIN] ERROR: {ex.Message}");
            mensajeError = $"Error: {ex.Message}";
        }

        StateHasChanged();
    }
}