@page "/admin/logo"
@layout AdminLayout
@using System.IO
@using Microsoft.AspNetCore.Components.Forms
@inject ILogoService LogoService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Logo</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-palette me-2"></i>Gestión del Logo</h1>

    <!-- Mensajes de error/éxito -->
    @if (!string.IsNullOrEmpty(mensajeError))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @mensajeError
            <button type="button" class="btn-close" @onclick="() => mensajeError = null"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(mensajeExito))
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>
            @mensajeExito
            <button type="button" class="btn-close" @onclick="() => mensajeExito = null"></button>
        </div>
    }

    <div class="row">
        <!-- Logo Actual -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-image me-2"></i>Logo Actual</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(logoActual))
                    {
                        <div class="mb-3">
                            <img src="@logoActual"
                                 alt="Logo Elegant Nails"
                                 class="img-fluid rounded border p-2 bg-light"
                                 style="max-height: 200px; max-width: 100%;" />
                        </div>
                        <div class="alert alert-info small">
                            <i class="bi bi-info-circle me-1"></i>
                            Logo personalizado cargado
                        </div>
                        <button class="btn btn-danger btn-sm" @onclick="MostrarModalEliminar">
                            <i class="bi bi-trash me-1"></i>Eliminar Logo
                        </button>
                    }
                    else
                    {
                        <div class="py-4">
                            <i class="bi bi-image text-muted display-4 d-block mb-3"></i>
                            <h5 class="text-muted">No hay logo cargado</h5>
                            <p class="text-muted small mb-0">Sube un logo para personalizar tu sitio</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Subir Nuevo Logo -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cloud-arrow-up me-2"></i>Subir Nuevo Logo</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Seleccionar archivo de imagen</label>

                        <!-- Input File SIMPLIFICADO -->
                        <div class="mb-3">
                            <input type="file"
                                   id="fileInput"
                                   class="form-control"
                                   accept=".png,.jpg,.jpeg,.gif,.webp"
                                   @onchange="HandleFileSelected" />
                            <div class="form-text text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Formatos permitidos: PNG, JPG, JPEG, GIF, WEBP (Máximo 5MB)
                            </div>
                        </div>

                        <!-- Vista previa -->
                        @if (!string.IsNullOrEmpty(previewImagen))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Vista previa:</label>
                                <div class="text-center">
                                    <img src="@previewImagen"
                                         alt="Vista previa"
                                         class="img-thumbnail border-success"
                                         style="max-height: 150px; max-width: 100%;" />
                                    <div class="mt-2 small">
                                        <span class="badge bg-info">
                                            <i class="bi bi-file-earmark-image me-1"></i>
                                            @fileName
                                        </span>
                                        <span class="badge bg-secondary ms-2">
                                            <i class="bi bi-hdd me-1"></i>
                                            @fileSize KB
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Botón Subir -->
                        <div class="d-grid gap-2">
                            <button type="button"
                                    class="btn btn-success"
                                    @onclick="SubirLogo"
                                    disabled="@(string.IsNullOrEmpty(previewImagen) || isUploading)">
                                @if (isUploading)
                                {
                                    <span>
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        Subiendo...
                                    </span>
                                }
                                else
                                {
                                    <span><i class="bi bi-upload me-2"></i>Subir Logo</span>
                                }
                            </button>

                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancelar">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
@if (mostrarModalEliminar)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="bi bi-trash text-danger display-4 d-block mb-3"></i>
                    <h4>¿Eliminar el logo actual?</h4>
                    <p class="text-muted">Esta acción no se puede deshacer.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="EliminarLogo">
                        <i class="bi bi-trash me-2"></i>Sí, Eliminar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string logoActual = "";
    private string? previewImagen;
    private bool mostrarModalEliminar = false;
    private string? mensajeError;
    private string? mensajeExito;
    private bool isUploading = false;
    private string fileName = "";
    private string fileSize = "0";
    private IBrowserFile? archivoSeleccionado;

    protected override async Task OnInitializedAsync()
    {
        await CargarLogoActual();
    }

    private async Task CargarLogoActual()
    {
        try
        {
            logoActual = LogoService.ObtenerLogoActual();
            if (!string.IsNullOrEmpty(logoActual))
            {
                // Agregar timestamp para evitar cache
                logoActual += "?t=" + DateTime.Now.Ticks;
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar logo: {ex.Message}";
        }
    }

    // MÉTODO SIMPLIFICADO - usa InputFileChangeEventArgs
    private async Task HandleFileSelected(ChangeEventArgs e)
    {
        try
        {
            mensajeError = null;
            mensajeExito = null;

            var input = e.Value as InputFileChangeEventArgs;
            if (input == null || input.FileCount == 0)
                return;

            var file = input.File;
            if (file == null)
                return;

            // Validar tamaño (5MB máximo)
            if (file.Size > 5 * 1024 * 1024)
            {
                mensajeError = "El archivo es demasiado grande (Máx. 5MB)";
                previewImagen = null;
                archivoSeleccionado = null;
                return;
            }

            // Guardar el archivo
            archivoSeleccionado = file;
            fileName = file.Name;
            fileSize = (file.Size / 1024).ToString("N0");

            // Crear vista previa
            var format = "image/png";
            var imageFile = await file.RequestImageFileAsync(format, 800, 600);
            var buffer = new byte[imageFile.Size];
            await imageFile.OpenReadStream().ReadAsync(buffer);
            previewImagen = $"data:{format};base64,{Convert.ToBase64String(buffer)}";

            StateHasChanged();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar archivo: {ex.Message}";
            previewImagen = null;
            archivoSeleccionado = null;
        }
    }

    private async Task SubirLogo()
    {
        if (archivoSeleccionado == null)
        {
            mensajeError = "Por favor selecciona un archivo";
            return;
        }

        isUploading = true;
        mensajeError = null;

        try
        {
            // Leer el archivo como stream
            var stream = archivoSeleccionado.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);

            // Subir archivo usando el servicio
            var nuevaRuta = await LogoService.GuardarLogoAsync(stream, fileName);

            // Actualizar logo actual
            logoActual = nuevaRuta;

            mensajeExito = "¡Logo subido exitosamente!";

            // Limpiar formulario
            ResetearFormulario();

            // Recargar después de 2 segundos
            await Task.Delay(2000);
            mensajeExito = null;
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al subir logo: {ex.Message}";
        }
        finally
        {
            isUploading = false;
            StateHasChanged();
        }
    }

    private void ResetearFormulario()
    {
        previewImagen = null;
        fileName = "";
        fileSize = "0";
        archivoSeleccionado = null;
    }

    private void Cancelar()
    {
        ResetearFormulario();
        mensajeError = null;
        mensajeExito = null;
    }

    private void MostrarModalEliminar()
    {
        if (!string.IsNullOrEmpty(logoActual))
        {
            mostrarModalEliminar = true;
        }
    }

    private void CerrarModal()
    {
        mostrarModalEliminar = false;
    }

    private async Task EliminarLogo()
    {
        try
        {
            var resultado = LogoService.EliminarLogo();
            if (resultado)
            {
                logoActual = "";
                mensajeExito = "Logo eliminado correctamente";
                mostrarModalEliminar = false;

                await Task.Delay(2000);
                mensajeExito = null;
            }
            else
            {
                mensajeError = "No se pudo eliminar el logo";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al eliminar logo: {ex.Message}";
        }
    }
}