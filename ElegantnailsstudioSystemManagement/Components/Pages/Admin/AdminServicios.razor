@page "/admin/servicios"
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@using Microsoft.AspNetCore.Components.Forms <!-- AÑADE ESTA LÍNEA -->
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Servicios</PageTitle>

<h1>Gestión de Servicios</h1>

<!-- Mensajes de éxito/error -->
@if (!string.IsNullOrEmpty(mensajeExito))
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle me-2"></i> @mensajeExito
        <button type="button" class="btn-close" @onclick="() => mensajeExito = string.Empty"></button> <!-- CAMBIADO '' por string.Empty -->
    </div>
}

@if (!string.IsNullOrEmpty(mensajeError))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i> @mensajeError
        <button type="button" class="btn-close" @onclick="() => mensajeError = string.Empty"></button> <!-- CAMBIADO '' por string.Empty -->
    </div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <button class="btn btn-success" @onclick="ShowAddModal">
            <i class="bi bi-plus-circle"></i> Agregar Servicio
        </button>
    </div>
    <div class="col-md-6">
        <select @bind="selectedCategoriaId" class="form-select" @oninput="(e) => OnCategoriaFilterChanged(e)">
            <option value="0">Todas las categorías</option>
            @foreach (var cat in categoriasFiltro)
            {
                <option value="@cat.Id">@cat.Nombre</option>
            }
        </select>
    </div>
</div>

@if (servicios.Any())
{
    <div class="row">
        @foreach (var servicio in servicios)
        {
            var categoria = categoriasFiltro.FirstOrDefault(c => c.Id == servicio.CategoriaId);
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@servicio.Nombre</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@(categoria?.Nombre ?? "Sin categoría")</h6>
                        <p class="card-text">@servicio.Descripcion</p>
                        <p class="card-text">
                            <strong>Precio:</strong> @servicio.Precio.ToString("C")<br>
                            <strong>Duración:</strong> @servicio.DuracionMinutos minutos
                        </p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditServicio(servicio)">
                            <i class="bi bi-pencil"></i> Editar
                        </button>
                        <button class="btn btn-sm btn-danger me-1" @onclick="() => MostrarConfirmacionEliminar(servicio)">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No hay servicios</h4>
        <p>No se encontraron servicios @(selectedCategoriaId == 0 ? "" : "en esta categoría") en el sistema.</p>
    </div>
}

<!-- Modal para agregar/editar servicio -->
@if (showModal)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(currentServicio.Id == 0 ? "Agregar" : "Editar") Servicio</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <!-- 🔥 AGREGADO FormName -->
                <EditForm Model="currentServicio" OnValidSubmit="SaveServicio" FormName="serviciosForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Nombre:</label>
                                    <InputText @bind-Value="currentServicio.Nombre" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Categoría:</label>
                                    <select @bind="currentServicio.CategoriaId" class="form-select">
                                        <option value="0">Seleccione categoría</option>
                                        @foreach (var cat in categoriasFiltro)
                                        {
                                            <option value="@cat.Id">@cat.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Descripción:</label>
                            <InputTextArea @bind-Value="currentServicio.Descripcion" class="form-control" rows="3" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Precio ($):</label>
                                    <InputNumber @bind-Value="currentServicio.Precio" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">Duración (minutos):</label>
                                    <InputNumber @bind-Value="currentServicio.DuracionMinutos" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">URL de Imagen:</label>
                            <InputText @bind-Value="currentServicio.ImagenUrl" class="form-control" />
                            @if (!string.IsNullOrEmpty(currentServicio.ImagenUrl))
                            {
                                <div class="mt-2">
                                    <img src="@currentServicio.ImagenUrl" alt="Vista previa" class="img-thumbnail" style="max-height: 100px;" />
                                </div>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<!-- Modal de confirmación para eliminar servicio -->
@if (showConfirmacionEliminar && servicioAEliminar != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Eliminar Servicio
                    </h5>
                    <button type="button" class="btn-close" @onclick="CancelarEliminacion"></button>
                </div>

                <div class="modal-body text-center py-4">
                    <!-- Icono de advertencia -->
                    <div class="mb-3">
                        <i class="bi bi-trash-fill text-danger" style="font-size: 3rem;"></i>
                    </div>

                    <!-- Título -->
                    <h4 class="mb-3">¿Estás seguro de eliminar este servicio?</h4>

                    <!-- Nombre del servicio -->
                    <div class="alert alert-light border">
                        <h5 class="mb-0">"@servicioAEliminar.Nombre"</h5>
                    </div>

                    <!-- Detalles del servicio -->
                    <div class="mt-3 text-start">
                        <p><strong>Descripción:</strong> @servicioAEliminar.Descripcion</p>
                        <p><strong>Precio:</strong> @servicioAEliminar.Precio.ToString("C")</p>
                        <p><strong>Duración:</strong> @servicioAEliminar.DuracionMinutos minutos</p>
                    </div>

                    <!-- Advertencia -->
                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Este servicio desaparecerá permanentemente.</strong>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" @onclick="CancelarEliminacion">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminacion">
                        <i class="bi bi-trash me-1"></i> Eliminar Servicio
                    </button>
                </div>
            </div>

            <div class="mt-3">
                <a href="/admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Atrás
                </a>
            </div>
        </div>
    </div>
}

@code {
    private List<Servicio> servicios = new();
    private List<Categoria> categoriasFiltro = new();
    private bool showModal = false;
    private bool showConfirmacionEliminar = false;
    private int selectedCategoriaId = 0;
    private Servicio currentServicio = new();
    private Servicio servicioAEliminar = null;
    private string mensajeExito = string.Empty;
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            categoriasFiltro = await CategoriaService.GetCategoriasAsync();
            await LoadServicios();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar datos: {ex.Message}";
        }
    }

    private async Task LoadServicios()
    {
        servicios = await ServicioService.GetServiciosActivosAsync();

        if (selectedCategoriaId > 0)
        {
            servicios = servicios.Where(s => s.CategoriaId == selectedCategoriaId).ToList();
        }
    }

    private async void OnCategoriaFilterChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int categoriaId))
        {
            selectedCategoriaId = categoriaId;
        }
        await LoadServicios();
        StateHasChanged();
    }

    private void ShowAddModal()
    {
        currentServicio = new Servicio();
        showModal = true;
    }

    private void EditServicio(Servicio servicio)
    {
        currentServicio = new Servicio
            {
                Id = servicio.Id,
                Nombre = servicio.Nombre,
                Descripcion = servicio.Descripcion,
                Precio = servicio.Precio,
                DuracionMinutos = servicio.DuracionMinutos,
                CategoriaId = servicio.CategoriaId,
                ImagenUrl = servicio.ImagenUrl
            };
        showModal = true;
    }

    private async Task SaveServicio()
    {
        try
        {
            bool success;
            if (currentServicio.Id == 0)
                success = await ServicioService.CrearServicio(currentServicio);
            else
                success = await ServicioService.ActualizarServicio(currentServicio);

            if (success)
            {
                showModal = false;
                await LoadServicios();
                mensajeExito = "Servicio guardado exitosamente";
                mensajeError = string.Empty;
            }
            else
            {
                mensajeError = "Error al guardar el servicio.";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al guardar: {ex.Message}";
        }
    }

    // Métodos para el modal de confirmación de eliminación
    private void MostrarConfirmacionEliminar(Servicio servicio)
    {
        servicioAEliminar = servicio;
        showConfirmacionEliminar = true;
        StateHasChanged();
    }

    private void CancelarEliminacion()
    {
        servicioAEliminar = null;
        showConfirmacionEliminar = false;
        StateHasChanged();
    }

    private async Task ConfirmarEliminacion()
    {
        if (servicioAEliminar == null)
        {
            Console.WriteLine("❌ [FRONT] servicioAEliminar es NULL");
            return;
        }

        Console.WriteLine($"🔍 [FRONT] Confirmando eliminación de servicio ID: {servicioAEliminar.Id}");
        Console.WriteLine($"🔍 [FRONT] Nombre del servicio: {servicioAEliminar.Nombre}");

        try
        {
            bool eliminado = await ServicioService.EliminarServicioAsync(servicioAEliminar.Id);

            Console.WriteLine($"📊 [FRONT] Resultado de eliminación: {eliminado}");

            if (eliminado)
            {
                Console.WriteLine($"✅ [FRONT] Servicio eliminado exitosamente");
                mensajeExito = $"Servicio '{servicioAEliminar.Nombre}' eliminado correctamente";
                mensajeError = string.Empty;

                servicioAEliminar = null;
                showConfirmacionEliminar = false;

                await LoadServicios();

                // Auto-ocultar mensaje después de 3 segundos
                await Task.Delay(3000);
                mensajeExito = string.Empty;
            }
            else
            {
                Console.WriteLine($"❌ [FRONT] No se pudo eliminar el servicio");
                mensajeError = "No se pudo eliminar el servicio. Verifica que no tenga citas asociadas.";
                mensajeExito = string.Empty;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"💥 [FRONT] ERROR: {ex.Message}");
            mensajeError = $"Error: {ex.Message}";
        }

        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
    }
}






