@page "/admin/categorias"
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails - Categorías</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-tags me-2"></i>Gestión de Categorías</h1>
        <a href="/admin/categorias/agregar" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>Agregar Categoría
        </a>
    </div>

    @if (categorias.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            No hay categorías registradas.
            <a href="/admin/categorias/agregar" class="alert-link">Agrega tu primera categoría</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in categorias)
                    {
                        <tr>
                            <td>@cat.Id</td>
                            <td>@cat.Nombre</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/admin/categorias/modificar/@cat.Id"
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => MostrarConfirmacionEliminar(cat)">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }

    <div class="mt-3">
        <a href="/admin" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Volver al panel
        </a>
    </div>
</div>

<!-- Modal para confirmar eliminación (opcional, si quieres mantenerlo) -->
@if (categoriaAEliminar != null)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Eliminar Categoría</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelarEliminacion"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-exclamation-triangle text-danger display-4 mb-3"></i>
                        <h4>¿Estás seguro de eliminar esta categoría?</h4>
                        <p class="text-muted">"@categoriaAEliminar.Nombre"</p>
                        <p class="text-danger"><strong>Esta categoría desaparecerá permanentemente.</strong></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelarEliminacion">
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmarEliminacion">
                        <i class="bi bi-trash me-2"></i>Eliminar Categoría
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Categoria> categorias = new();
    private Categoria? categoriaAEliminar;

    protected override async Task OnInitializedAsync()
    {
        await CargarCategorias();
    }

    private async Task CargarCategorias()
    {
        categorias = await CategoriaService.GetCategoriasAsync();
    }

    private void MostrarConfirmacionEliminar(Categoria categoria)
    {
        categoriaAEliminar = categoria;
    }

    private void CancelarEliminacion()
    {
        categoriaAEliminar = null;
    }

    private async Task ConfirmarEliminacion()
    {
        if (categoriaAEliminar != null)
        {
            await CategoriaService.DeleteCategoriaAsync(categoriaAEliminar.Id);
            categoriaAEliminar = null;
            await CargarCategorias();
        }
    }
}






