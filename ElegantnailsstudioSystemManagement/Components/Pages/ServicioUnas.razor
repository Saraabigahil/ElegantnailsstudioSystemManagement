@page "/unas"
@layout MainLayout
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject IServicioService ServicioService
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation
@inject AuthService AuthService

<PageTitle>Elegant Nails - Uñas</PageTitle>


@if (mostrarAlertaNoLogueado)
{
    <div class="modal-overlay" @onclick="CerrarAlertaNoLogueado">
        <div class="modal-alerta" @onclick:stopPropagation>
            <div class="modal-alerta-header bg-danger">
                <h5><i class="bi bi-exclamation-triangle me-2"></i>¡Acceso Restringido!</h5>
                <button type="button" class="btn-close" @onclick="CerrarAlertaNoLogueado"></button>
            </div>
            <div class="modal-alerta-body text-center">
                <i class="bi bi-person-x" style="font-size: 4rem; color: #dc3545;"></i>
                <h4 class="mt-3">Sesión Requerida</h4>
                <p>Para agendar una cita necesitas tener una cuenta.</p>
                <p class="text-muted">Inicia sesión o regístrate para continuar.</p>
            </div>
            <div class="modal-alerta-footer">
                <a href="/" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancelar
                </a>
                <a href="/login" class="btn btn-danger">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                </a>
                <a href="/registro" class="btn btn-success">
                    <i class="bi bi-person-plus me-1"></i>Registrarse
                </a>
            </div>
        </div>
    </div>
}

<header class="unas-header">
    <div class="container">
        <div class="unas-header-content">
            <h1 class="unas-title">
                <i class="bi bi-brush me-2"></i>Servicios de Uñas
            </h1>
            <p class="unas-subtitle">Cuida y embellece tus uñas con nuestros servicios especializados</p>
        </div>
    </div>
</header>


<main class="unas-main">
    <div class="container">
        @if (serviciosUnas.Count == 0)
        {
            <div class="alert alert-info">
                <h4><i class="bi bi-info-circle me-2"></i>No hay servicios disponibles</h4>
                <p>Próximamente agregaremos nuestros servicios de uñas.</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var servicio in serviciosUnas)
                {
                    <div class="col-md-4">
                        <div class="tarjeta-unificada">
                            
                            <div class="contenedor-imagen-tarjeta">
                                @if (!string.IsNullOrEmpty(servicio.ImagenUrl) && !servicio.ImagenUrl.Contains("placeholder"))
                                {
                                    <img src="@servicio.ImagenUrl"
                                         alt="@servicio.Nombre"
                                         class="img-fluid"
                                         onerror="this.src='/placeholder-image.png'" />
                                }
                                else
                                {
                                    <div class="placeholder-imagen-unificado">
                                        <i class="bi bi-brush"></i>
                                        <p>@servicio.Nombre</p>
                                    </div>
                                }
                            </div>

                            <div class="encabezado-tarjeta">
                                <h5 class="titulo-tarjeta">
                                    <i class="bi bi-stars me-2"></i>@servicio.Nombre
                                </h5>
                            </div>

                            <div class="cuerpo-tarjeta">
                                <p class="descripcion-tarjeta">@servicio.Descripcion</p>

                                <div class="info-servicio">
                                    <div class="contenedor-precio-duracion">
                                        <span class="precio-tarjeta">
                                            <i class="bi bi-currency-dollar me-1"></i>@servicio.Precio.ToString("C")
                                        </span>
                                        <span class="duracion-tarjeta">
                                            <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                        </span>
                                    </div>
                                </div>

                                <button class="boton-agendar-unificado" @onclick="() => VerificarSesionYAgendar(servicio.Id)">
                                    <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</main>

@code {
    private List<Servicio> serviciosUnas = new();
    private Categoria? categoriaUnas;
    private bool mostrarAlertaNoLogueado = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarServiciosUnas();
    }

    private async Task CargarServiciosUnas()
    {
        try
        {
            
            categoriaUnas = await CategoriaService.GetCategoriaByNombreAsync("Uñas");

            if (categoriaUnas != null)
            {
                serviciosUnas = await ServicioService.GetServiciosByCategoriaAsync(categoriaUnas.Id);
            }
            else
            {
                var todosServicios = await ServicioService.GetServiciosActivosAsync();
                serviciosUnas = todosServicios
                    .Where(s => s.Nombre.ToLower().Contains("uña") ||
                               s.Nombre.ToLower().Contains("manicura") ||
                               s.Descripcion.ToLower().Contains("uña"))
                    .ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando servicios de uñas: {ex.Message}");
        }
    }

    private void VerificarSesionYAgendar(int servicioId)
    {
        Console.WriteLine($"🔍 Verificando sesión para servicio: {servicioId}");
        Console.WriteLine($"🔍 Estado de AuthService.IsLoggedIn: {AuthService.IsLoggedIn}");

        if (!AuthService.IsLoggedIn)
        {
            Console.WriteLine($"⚠️ Usuario NO logueado - Mostrando alerta");
            mostrarAlertaNoLogueado = true;
            StateHasChanged();
        }
        else
        {
            Console.WriteLine($"✅ Usuario logueado - Redirigiendo a cita");

           
            Navigation.NavigateTo($"/citas/agendar?servicioId={servicioId}", forceLoad: true);
        }
    }
    private void CerrarAlertaNoLogueado()
    {
        mostrarAlertaNoLogueado = false;
    }

}