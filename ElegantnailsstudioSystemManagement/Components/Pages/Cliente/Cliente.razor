@page "/cliente"
@layout MainLayout

@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@using ElegantnailsstudioSystemManagement.Components
@inject IServicioService ServicioService
@inject NavigationManager Navigation
@inject ILogoService LogoService 

<PageTitle>Elegant Nails Studio</PageTitle>

<link rel="stylesheet" href="css/admin-panel.css">

<header class="navbar-morado-cliente">
    <div class="fila-superior-cliente">

        <div class="logo-superior-cliente">
            @if (!string.IsNullOrEmpty(logoPath))
            {
                <img src="@logoPath" alt="Elegant Nails Logo" class="cliente-logo" />
            }
            else
            {
                <h1>Elegant Nails</h1>
                <p class="slogan-cliente">Studio & Lashes</p>
            }
        </div>

        <div class="bienvenida-derecha">
            <span class="bienvenida-saludo">BIENVENIDO A</span>
            <span class="bienvenida-nombre">ELEGANT NAILS ART STUDIO & LASHES!</span>
        </div>
    </div>

    <nav class="menu-inferior-cliente">
        <div class="container">
            <ul class="menu-lista-cliente">
                <li><a href="/cliente" class="activo"><i class="bi bi-house"></i> Inicio</a></li>
                <li><a href="/citas/mis-citas"><i class="bi bi-calendar-check"></i> Mis Citas</a></li>
                <li><a href="/citas/agendar"><i class="bi bi-calendar-plus"></i> Agendar Cita</a></li>
                <li><a href="/pestanas"><i class="bi bi-eye"></i> Pestañas</a></li>
                <li><a href="/unas"><i class="bi bi-brush"></i> Uñas</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- CARRUSEL -->
<div class="hero-carousel">
    <CarouselComponent />
</div>

<!-- CONTENIDO PRINCIPAL -->
<main class="container mt-5 pt-5 welcome-section">
    <div class="text-center mb-5 py-4">
        <h1 class="display-4 fw-bold">Bienvenido a Elegant Nails Studio & Lashes</h1>
        <p class="lead">Tu belleza es nuestra prioridad</p>
    </div>

    <!-- SERVICIOS -->
    @if (servicios.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>No hay servicios disponibles</h4>
            <p>Por el momento no tenemos servicios para mostrar.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var servicio in servicios)
            {
                <div class="col-md-4">
                    <div class="tarjeta-unificada">
                        <!-- IMAGEN DEL SERVICIO -->
                        <div class="contenedor-imagen-tarjeta">
                            @if (!string.IsNullOrEmpty(servicio.ImagenUrl) && !servicio.ImagenUrl.Contains("placeholder"))
                            {
                                <img src="@servicio.ImagenUrl"
                                     alt="@servicio.Nombre"
                                     class="img-fluid"
                                     onerror="this.src='/placeholder-image.png'" />
                            }
                            else
                            {
                                <div class="placeholder-imagen-unificado">
                                    <i class="bi bi-scissors"></i>
                                    <p>@servicio.Nombre</p>
                                </div>
                            }
                        </div>

                        <div class="cuerpo-tarjeta">
                            <h5 class="titulo-tarjeta">
                                <i class="bi bi-stars me-2"></i>@servicio.Nombre
                            </h5>

                            @if (!string.IsNullOrEmpty(servicio.Descripcion))
                            {
                                <p class="descripcion-tarjeta">@servicio.Descripcion</p>
                            }

                            <div class="info-servicio">
                                <div class="contenedor-precio-duracion">
                                    <span class="precio-tarjeta">
                                        <i class="bi bi-currency-dollar me-1"></i>@servicio.Precio.ToString("C")
                                    </span>
                                    <span class="duracion-tarjeta">
                                        <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                    </span>
                                </div>
                            </div>

                            <a href="/citas/agendar?servicioId=@servicio.Id" class="boton-agendar-unificado">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0">Elegant Nails Studio © 2024</p>
    </div>
</footer>

@code {
    private List<Servicio> servicios = new();
    private string logoPath = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        logoPath = LogoService.ObtenerLogoActual();
        await CargarServicios();
    }

    private async Task CargarServicios()
    {
        try
        {
            servicios = await ServicioService.GetServiciosActivosAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando servicios: {ex.Message}");
        }
    }
}