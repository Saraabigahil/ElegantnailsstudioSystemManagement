@page "/cliente"
@layout MainLayout
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@using ElegantnailsstudioSystemManagement.Components
@inject IServicioService ServicioService
@inject NavigationManager Navigation

<PageTitle>Elegant Nails Studio</PageTitle>

<!-- AGREGAR ESTA LÍNEA: Logo flotante -->
<LogoFlotante />

<!-- MENÚ IGUAL QUE INDEX - Cliente -->
<header class="navbar-morado-cliente">
    <!-- Fila superior: Logo izquierda, bienvenida derecha -->
    <div class="fila-superior-cliente">
        <!-- Logo a la izquierda -->
        <div class="logo-superior-cliente">
            <h1>Elegant Nails</h1>
            <p class="slogan-cliente">Studio & Lashes</p>
        </div>

        <!-- Bienvenida a la derecha -->
        <div class="bienvenida-derecha">
            <span class="bienvenida-saludo">BIENVENIDO A</span>
            <span class="bienvenida-nombre">ELEGANT NAILS ART STUDIO & LASHES!</span>
        </div>
    </div>

    <!-- Fila inferior: Menú centrado -->
    <nav class="menu-inferior-cliente">
        <div class="container">
            <ul class="menu-lista-cliente">
                <li><a href="/cliente" class="activo"><i class="bi bi-house"></i> Inicio</a></li>
                <li><a href="/citas"><i class="bi bi-calendar"></i> Citas</a></li>
                <li><a href="/pestanas"><i class="bi bi-eye"></i> Pestañas</a></li>
                <li><a href="/unas"><i class="bi bi-brush"></i> Uñas</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- CARRUSEL (ya está bien) -->
<div class="cliente-carrusel">
    <CarouselComponent />
</div>

<!-- TODO LO DEMÁS QUEDA EXACTAMENTE IGUAL -->
<main class="container cliente-contenido mt-4">
    <!-- Bienvenida centrada -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Bienvenido a Elegant Nails Studio & Lashes</h1>
        <p class="lead text-muted">Tu belleza es nuestra prioridad</p>

        <!-- Botón Mis Citas DEBAJO (como en tu diseño) -->
        <div class="mt-4">
            <a href="/citas/mis-citas" class="btn btn-info btn-lg">
                <i class="bi bi-calendar-check me-2"></i>Mis Citas
            </a>
        </div>
    </div>

    <!-- SERVICIOS -->
    @if (servicios.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>No hay servicios disponibles</h4>
            <p>Por el momento no tenemos servicios para mostrar.</p>
        </div>
    }
    else
    {
        <h2 class="text-center mb-4 fw-bold">A TU ESTILO</h2>
        <p class="text-center text-muted mb-5">en cada detalle</p>

        <div class="row g-4">
            @foreach (var servicio in servicios)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow servicio-card-cliente">
                        <div class="card-body p-4">
                            <!-- Título del servicio -->
                            <div class="servicio-titulo-container mb-3">
                                <h5 class="card-title fw-bold mb-2 servicio-nombre">@servicio.Nombre</h5>
                                @if (!string.IsNullOrEmpty(servicio.Descripcion))
                                {
                                    <p class="card-text servicio-descripcion">@servicio.Descripcion</p>
                                }
                            </div>

                            <!-- Precio y duración -->
                            <div class="servicio-info-container mb-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="servicio-precio-cliente">@servicio.Precio.ToString("C")</span>
                                    </div>
                                    <span class="servicio-duracion-badge">
                                        <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                    </span>
                                </div>
                            </div>

                            <!-- Botón Agendar -->
                            <a href="/citas/agendar?servicioId=@servicio.Id"
                               class="btn btn-agendar-cliente w-100">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- SECCIÓN EXTRA (como en tu diseño) -->
    <div class="mt-5 pt-5">
        <h3 class="text-center fw-bold mb-4">Nuestros Servicios</h3>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="servicio-destacado p-3">
                    <h5 class="fw-bold">Pestañas individuales</h5>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="servicio-precio-cliente">$30.00</span>
                        <a href="/citas/agendar?tipo=pestanas" class="btn btn-sm btn-agendar-cliente">
                            <i class="bi bi-calendar-plus me-1"></i>Agendar Cita
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="servicio-destacado p-3">
                    <h5 class="fw-bold">Pestañas magnéticas</h5>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="servicio-precio-cliente">$35.00</span>
                        <a href="/citas/agendar?tipo=pestanas-magneticas" class="btn btn-sm btn-agendar-cliente">
                            <i class="bi bi-calendar-plus me-1"></i>Agendar Cita
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Footer -->
<footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0">Elegant Nails Studio © 2024</p>
    </div>
</footer>

@code {
    private List<Servicio> servicios = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarServicios();
    }

    private async Task CargarServicios()
    {
        try
        {
            servicios = await ServicioService.GetServiciosActivosAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error cargando servicios: {ex.Message}");
        }
    }
}







