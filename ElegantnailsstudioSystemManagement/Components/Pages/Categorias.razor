@page "/categorias"
@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@inject ICategoriaService CategoriaService
@inject AuthStateService AuthService

<PageTitle>Elegant Nails - Categorías</PageTitle>

<h1>Gestión de Categorías</h1>

@if (!AuthService.IsAdmin)
{
    <div class="alert alert-warning">
        <h4>Acceso Restringido</h4>
        <p>No tienes permisos para acceder a esta sección.</p>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-6">
            <button class="btn btn-success" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Agregar Categoría
            </button>
        </div>
    </div>

    @if (categorias.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in categorias)
                    {
                        <tr>
                            <td>@cat.Id</td>
                            <td>@cat.Nombre</td>
                            <td>
                                <button class="btn btn-sm btn-primary me-1" @onclick="() => EditCategoria(cat)"
                                        title="Editar categoría">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategoria(cat.Id)"
                                        title="Eliminar categoría">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No hay categorías</h4>
            <p>No se encontraron categorías en el sistema.</p>
        </div>
    }

    <!-- Modal para agregar/editar -->
    @if (showModal)
    {
        <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(currentCategoria.Id == 0 ? "Agregar" : "Editar") Categoría</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <EditForm Model="currentCategoria" OnValidSubmit="SaveCategoria">
                        <div class="modal-body">
                            <div class="form-group mb-3">
                                <label class="form-label">Nombre:</label>
                                <InputText @bind-Value="currentCategoria.Nombre" class="form-control" />
                                <ValidationMessage For="@(() => currentCategoria.Nombre)" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancelar</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<Categoria> categorias = new();
    private bool showModal = false;
    private Categoria currentCategoria = new();
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategorias();
    }

    private async Task LoadCategorias()
    {
        try
        {
            categorias = await CategoriaService.GetCategoriasAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar categorías: {ex.Message}";
        }
    }

    private void ShowAddModal()
    {
        currentCategoria = new Categoria();
        showModal = true;
    }

    private void EditCategoria(Categoria cat)
    {
        currentCategoria = new Categoria
            {
                Id = cat.Id,
                Nombre = cat.Nombre
            };
        showModal = true;
    }

    private async Task SaveCategoria()
    {
        try
        {
            bool success;
            if (currentCategoria.Id == 0)
                success = await CategoriaService.CreateCategoriaAsync(currentCategoria);
            else
                success = await CategoriaService.UpdateCategoriaAsync(currentCategoria);

            if (success)
            {
                showModal = false;
                await LoadCategorias();
                errorMessage = string.Empty;
            }
            else
            {
                errorMessage = "Error al guardar la categoría. Verifique que el nombre no exista.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al guardar: {ex.Message}";
        }
    }

    private async Task DeleteCategoria(int id)
    {
        if (await CategoriaService.DeleteCategoriaAsync(id))
        {
            await LoadCategorias();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        errorMessage = string.Empty;
    }
}
