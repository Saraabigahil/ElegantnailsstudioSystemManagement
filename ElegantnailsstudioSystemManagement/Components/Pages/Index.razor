@page "/"

@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@using ElegantnailsstudioSystemManagement.Components
@inject IServicioService ServicioService
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject ILogoService LogoService 

<PageTitle>Elegant Nails Studio</PageTitle>
<link rel="stylesheet" href="css/admin-panel.css">
<!-- ELIMINAR ESTA LÍNEA: -->
<!-- <LogoFlotante /> -->

<!-- MENÚ NEGRO Y MORADO OSCURO - Index -->
<header class="navbar-morado">
    
    <div class="fila-superior">
        <!-- Logo a la izquierda - MODIFICADO -->
        <div class="logo-izquierda">
            @if (!string.IsNullOrEmpty(logoPath))
            {
                <img src="@logoPath" alt="Elegant Nails Logo" class="home-logo" />
            }
            else
            {
                <h1>Elegant Nails</h1>
                <p class="slogan">PREMIUM AUDIBLE SERIES</p>
            }
        </div>

        <div class="botones-derecha">
            <a href="/registro" class="btn-registro">Registrarme</a>
            <a href="/login" class="btn-login">Inicio sesión</a>
        </div>
    </div>

    <!-- Fila inferior MORADO OSCURÍSIMO: Menú centrado -->
    <nav class="fila-inferior">
        <div class="container">
            <ul class="menu-lista">
                <li><a href="/" class="activo">Inicio</a></li>
                <li><a href="/citas">Citas</a></li>
                <li><a href="/pestanas">Pestañas</a></li>
                <li><a href="/servicios-unas">Servicio de uñas</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- Componente Carrusel Compartido -->
<CarouselComponent />

<!-- Agrega esta clase al contenedor principal -->
<main class="container mt-5 pt-5 welcome-section">
    <div class="text-center mb-5 py-4">
        <h1 class="display-4 fw-bold">Bienvenido a Elegant Nails Studio</h1>
        <p class="lead">Tu belleza es nuestra prioridad</p>
    </div>

    @if (servicios.Any())
    {
        <div class="row g-4">
            @foreach (var servicio in servicios)
            {
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@servicio.Nombre</h5>
                            <p class="card-text text-muted">@servicio.Descripcion</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 text-primary fw-bold">@servicio.Precio.ToString("C")</span>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                </span>
                            </div>

                            @if (AuthService.IsLoggedIn)
                            {
                                <button class="btn btn-primary w-100 mt-3"
                                        @onclick="() => AgendarCita(servicio.Id)">
                                    <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                                </button>
                            }
                            else
                            {
                                <div class="alert alert-warning mt-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <a href="/login" class="alert-link">Inicia sesión</a> para agendar citas
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0">Elegant Nails Studio © 2024</p>
    </div>
</footer>

@code {
    private List<Servicio> servicios = new();
    private string logoPath = string.Empty; // AGREGAR ESTA LÍNEA

    protected override async Task OnInitializedAsync()
    {
        // AGREGAR ESTA LÍNEA:
        logoPath = LogoService.ObtenerLogoActual();

        await CargarServicios();
    }

    private async Task CargarServicios()
    {
        servicios = await ServicioService.GetServiciosActivosAsync();
    }

    private void AgendarCita(int servicioId)
    {
        Navigation.NavigateTo($"/citas?servicioId={servicioId}");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/", forceLoad: true);
    }
}





