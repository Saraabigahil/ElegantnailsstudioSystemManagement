@page "/"

@using ElegantnailsstudioSystemManagement.Models
@using ElegantnailsstudioSystemManagement.Services
@using ElegantnailsstudioSystemManagement.Components
@inject IServicioService ServicioService
@inject NavigationManager Navigation
@inject AuthService AuthService
@inject ILogoService LogoService

<PageTitle>Elegant Nails Studio</PageTitle>
<link rel="stylesheet" href="css/admin-panel.css">

<header class="navbar-morado">
    <div class="fila-superior">
        <div class="logo-izquierda">
            @if (!string.IsNullOrEmpty(logoPath))
            {
                <img src="@logoPath" alt="Elegant Nails Logo" class="home-logo" />
            }
            else
            {
                <h1>Elegant Nails</h1>
                <p class="slogan">PREMIUM AUDIBLE SERIES</p>
            }
        </div>

        <div class="botones-derecha">
            <a href="/registro" class="btn-registro">Registrarme</a>
            <a href="/login" class="btn-login">Inicio sesión</a>
        </div>
    </div>

    <nav class="fila-inferior">
        <div class="container">
            <ul class="menu-lista">
                <li><a href="/" class="activo">Inicio</a></li>
                <li><a href="javascript:void(0)" @onclick="MostrarAlertaCitas">Citas</a></li>
                <li><a href="/pestanas">Pestañas</a></li>
                <li><a href="/unas">Servicio de uñas</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- Componente Carrusel -->
<CarouselComponent />

<main class="container mt-5 pt-5 welcome-section">
    <div class="text-center mb-5 py-4">
        <h1 class="display-4 fw-bold">Bienvenido a Elegant Nails Studio</h1>
        <p class="lead">Tu belleza es nuestra prioridad</p>
    </div>

    @if (servicios.Any())
    {
        <div class="row g-4">
            @foreach (var servicio in servicios)
            {
                <div class="col-md-4">
                    <div class="tarjeta-unificada">
                        <!-- IMAGEN DEL SERVICIO -->
                        <div class="contenedor-imagen-tarjeta">
                            @if (!string.IsNullOrEmpty(servicio.ImagenUrl) && !servicio.ImagenUrl.Contains("placeholder"))
                            {
                                <img src="@servicio.ImagenUrl"
                                     alt="@servicio.Nombre"
                                     class="img-fluid"
                                     onerror="this.src='/placeholder-image.png'" />
                            }
                            else
                            {
                                <div class="placeholder-imagen-unificado">
                                    <i class="bi bi-scissors"></i>
                                    <p>@servicio.Nombre</p>
                                </div>
                            }
                        </div>

                        <div class="cuerpo-tarjeta">
                            <h5 class="titulo-tarjeta">
                                <i class="bi bi-stars me-2"></i>@servicio.Nombre
                            </h5>

                            <p class="descripcion-tarjeta">@servicio.Descripcion</p>

                            <div class="info-servicio">
                                <div class="contenedor-precio-duracion">
                                    <span class="precio-tarjeta">
                                        <i class="bi bi-currency-dollar me-1"></i>@servicio.Precio.ToString("C")
                                    </span>
                                    <span class="duracion-tarjeta">
                                        <i class="bi bi-clock me-1"></i>@servicio.DuracionMinutos min
                                    </span>
                                </div>
                            </div>

                            <button class="boton-agendar-unificado" @onclick="() => VerificarSesionYAgendar(servicio.Id)">
                                <i class="bi bi-calendar-plus me-2"></i>Agendar Cita
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</main>
<!-- MODAL DE ALERTA PARA USUARIOS NO LOGUEADOS -->
@if (mostrarAlertaNoLogueado)
{
    <div class="modal show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle me-2"></i>Acceso Requerido
                    </h5>
                    <button type="button" class="btn-close" @onclick="CerrarAlerta"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <div class="mb-3">
                        <i class="bi bi-shield-lock text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="mb-3">Debes iniciar sesión para agendar citas</h4>
                    <p class="text-muted">
                        Para poder reservar una cita, necesitas tener una cuenta y haber iniciado sesión.
                    </p>
                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        Si no tienes una cuenta, puedes registrarte en pocos segundos.
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <a href="/registro" class="btn btn-primary me-2">
                        <i class="bi bi-person-plus me-1"></i>Crear Cuenta
                    </a>
                    <a href="/login" class="btn btn-success">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar Sesión
                    </a>
                    <button type="button" class="btn btn-outline-secondary" @onclick="CerrarAlerta">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<footer class="bg-dark text-white py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0">Elegant Nails Studio © 2024</p>
    </div>
</footer>

@code {
    private List<Servicio> servicios = new();
    private string logoPath = string.Empty;
    private bool mostrarAlertaNoLogueado = false;

    protected override async Task OnInitializedAsync()
    {
        logoPath = LogoService.ObtenerLogoActual();
        await CargarServicios();
    }

    private async Task CargarServicios()
    {
        servicios = await ServicioService.GetServiciosActivosAsync();
    }

    private void MostrarAlertaCitas()
    {
        Console.WriteLine($"⚠️ Usuario no logueado - Mostrando alerta de citas");
        mostrarAlertaNoLogueado = true;
        StateHasChanged();
    }

    private void CerrarAlerta()
    {
        mostrarAlertaNoLogueado = false;
        StateHasChanged();
    }

    private void VerificarSesionYAgendar(int servicioId)
    {
        if (!AuthService.IsLoggedIn)
        {
            // alerta si NO está logueado
            Console.WriteLine($"⚠️ Usuario no logueado - Mostrando alerta");
            mostrarAlertaNoLogueado = true;
            StateHasChanged();
        }
        else
        {
            // Si está logueado, redirigir normalmente
            Console.WriteLine($"✅ Usuario logueado - Redirigiendo a cita");
            Navigation.NavigateTo($"/citas/agendar?servicioId={servicioId}");
        }
    }

    private void AgendarCita(int servicioId)
    {
        Navigation.NavigateTo($"/citas?servicioId={servicioId}");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/", forceLoad: true);
    }
}