@namespace ElegantnailsstudioSystemManagement
@inherits LayoutComponentBase
@using ElegantnailsstudioSystemManagement.Services
@inject AuthStateService AuthService
@inject NavigationManager Navigation

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="css/site.css" rel="stylesheet" />
    <title>Elegant Nails Studio</title>
</head>
<body>
      <!-- Header Principal -->
    <header class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-gem me-2"></i>Elegant Nails
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                @if (AuthService.IsLoggedIn)
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @GetNavLinkClass("/")" href="/">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @GetNavLinkClass("/servicios")" href="/servicios">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @GetNavLinkClass("/citas")" href="/citas">Mis Citas</a>
                        </li>
                        @if (AuthService.IsAdmin)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @GetNavLinkClass("/categorias,/usuarios")" href="#" role="button" data-bs-toggle="dropdown">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item @GetNavLinkClass("/categorias")" href="/categorias">Categorías</a></li>
                                    <li><a class="dropdown-item @GetNavLinkClass("/usuarios")" href="/usuarios">Usuarios</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                }

                <div class="navbar-nav">
                    @if (AuthService.IsLoggedIn)
                    {
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person me-1"></i>@AuthService.CurrentUser?.Nombre
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="#" @onclick="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light me-2 btn-sm" href="/login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Ingresar
                        </a>
                        <a class="btn btn-light btn-sm" href="/registro">
                            <i class="bi bi-person-plus me-1"></i>Registrarse
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mt-5 pt-4">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-3 mt-5">
        <div class="container text-center">
            <small>Elegant Nails Studio &copy; 2024</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    protected override void OnInitialized()
    {
        AuthService.OnChange += StateHasChanged;
    }

    private string GetNavLinkClass(string urls)
    {
        var currentUrl = NavigationManager.Uri;
        var urlList = urls.Split(',');

        foreach (var url in urlList)
        {
            if (currentUrl.Contains(url.Trim()) && url.Trim() != "")
            {
                return "active fw-bold";
            }
        }
        return "";
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/", true);
    }

    public void Dispose()
    {
        AuthService.OnChange -= StateHasChanged;
    }
}